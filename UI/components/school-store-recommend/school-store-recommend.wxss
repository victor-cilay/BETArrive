.store_box {
    background: #fff;
    border-radius: 20rpx;
    height: 441rpx;
    width: 690rpx;
}

.store_list {
    margin-top: 20rpx;
}

.store_list .store_info {
    margin-right: 15rpx;
    width: 200rpx;
}

.store_list .store_info:nth-child(3n) {
    margin-right: 0;
}

.store_list .store_info .main_img {
    height: 200rpx;
    width: 200rpx;
}

.store_list .store_info .name {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    color: #100c1a;
    display: -webkit-box;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-weight: 500;
    overflow: hidden;
    padding-top: 20rpx;
}

.store_list .store_info .song {
    color: #ff4c4d;
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
}