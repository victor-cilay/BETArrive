page {
    background-color: #f7f5f6;
}

.container {
    background-color: #f5f5f5;
    height: 100%;
    overflow: hidden;
}

.container .content {
    box-sizing: border-box;
    display: -webkit-flex;
    padding-bottom: 80px;
}

.container .scroll {
    height: 100%;
}

.container .block-title {
    background-color: #f5f5f5;
    color: #999;
    font-size: 14px;
    padding: 10px 15px;
}

.addr_box {
    border-radius: 20rpx;
}

.container .content .wui-cell {
    background-color: #fff;
    box-sizing: border-box;
    line-height: 1;
    margin: 30rpx;
    padding: 30rpx 30rpx 0;
}

.container .content .wui-cell::after {
    border-top: 0;
}

.container .content .wui-cell .address {
    display: inline-block;
    font-size: 14px;
    font-weight: 400;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 75%;
}

.container .content .wui-cell .more {
    margin-top: 10px;
}

.container .content .wui-cell .more>view {
    color: #919191;
    display: inline-block;
    font-size: 14px;
}

.container .content .wui-cell .more .name {
    margin-right: 5px;
}

.container .content .wui-cell .change {
    padding: 25rpx;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.container .content .wui-cell .change .icon {
    font-size: 18px;
}

.container .bottom-fixed {
    background-color: #fff;
    box-sizing: border-box;
    height: 50px;
    padding: 10px 0;
}

.container .bottom-fixed,.container .bottom-fixed>text {
    align-items: center;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
}

.container .bottom-fixed>text {
    height: 100%;
    width: 50%;
}

.container .bottom-fixed>text:nth-child(2) {
    border-left: 1rpx solid #e5e5e5;
    color: #6cc143;
}

.container .bottom-fixed .icon {
    font-size: 18px;
    margin-right: 3px;
}

.no-data {
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
}

.no-data .no-coupon {
    height: 100px;
    top: 150px;
    width: 100px;
}

.no-data .no-coupon,.no-data .no-record {
    left: 50%;
    position: absolute;
    transform: translate(-50%);
}

.no-data .no-record {
    color: #656565;
    font-size: 16px;
    top: 260px;
}

.bottom-fixed {
    color: #ffd56f;
    font-size: 16px;
    line-height: 50px;
    min-height: 50px;
    width: 100%;
}

.bottom-fixed,.btns {
    bottom: 0;
    position: fixed;
    text-align: center;
}

.btns {
    background: linear-gradient(90deg,#ff484a,#ff716c);
    border: none;
    border-radius: 40rpx;
    color: #fff;
    font-size: 32rpx;
    height: 90rpx;
    line-height: 90rpx;
    outline: none;
    width: 90%;
}

.bgm {
    background-color: #ff6344;
}

.text-xl {
    font-size: 36rpx!important;
}

.more_info {
    display: flex;
}

.more_info .name {
    font-size: 32rpx;
    font-weight: 700;
}

.more_info .phone {
    font-size: 30rpx;
}

.addres {
    color: #666;
    font-size: 28rpx;
    line-height: 90rpx;
}

.top {
    border-bottom: 1rpx solid #f5f5f5;
}

.icon {
    display: flex;
    font-size: 40rpx;
    justify-content: flex-end;
    line-height: 80rpx;
}

.icon text:first-child {
    margin-right: 40rpx;
}

.titles {
    background: #fff;
    color: #000;
    font-size: 30rpx;
    padding: 70rpx 0 30rpx;
    text-align: center;
}