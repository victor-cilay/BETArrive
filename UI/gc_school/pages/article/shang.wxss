.shang {
    background: #fff;
    border-radius: 20rpx;
    height: 150rpx;
    width: 690rpx;
}

.shang .avatar {
    border-radius: 50%;
    height: 90rpx;
    width: 90rpx;
}

.shang .nickname {
    color: #141414;
    font-family: PingFang SC;
    font-size: 32rpx;
    font-weight: 700;
}

.shang .time {
    color: #999;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
}

.shang .price {
    color: #fe0000;
    font-family: PingFang SC;
    font-size: 25rpx;
    font-weight: 700;
    margin-left: auto;
}