.store {
    box-shadow: 2rpx 2rpx 10rpx 15rpx #eee;
}

.store_list .store {
    padding: 30rpx;
}

.tags {
    margin-top: auto;
}

.cate_item2 {
    background: #fff;
    color: #000;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    position: relative;
}

.cate_item2::after {
    background: #ff6344;
    bottom: 8rpx;
    content: "";
    display: block;
    height: 6rpx;
    opacity: 0;
    position: absolute;
    width: 52rpx;
}

.cate_item2.cate_active2::after {
    opacity: 1;
}

.header {
    background: linear-gradient(0deg,#fff,#ff6344 41%,#ff6344);
    height: 452rpx;
    position: absolute;
    top: 0;
    width: 750rpx;
}

.slide_box {
    background: transparent!important;
}

.slide_box .slide-image {
    border-radius: 20rpx;
}

.tit {
    color: #000;
    font-family: PingFang SC;
    font-size: 36rpx;
    font-weight: 700;
    position: relative;
}

.tit::after {
    background: #ff6344;
    border-radius: 50%;
    content: "";
    display: block;
    height: 38rpx;
    left: 140rpx;
    position: absolute;
    top: 0;
    width: 38rpx;
    z-index: -1;
}

.search {
    align-items: center;
    background: #eaf6ef;
    border-radius: 36rpx;
    display: flex;
    width: 690rpx;
    z-index: 999;
}

.search,.search input {
    height: 72rpx;
    position: relative;
}

.search input {
    margin-left: 10rpx;
    width: 100%;
    z-index: 9999;
}

.search .icon {
    height: 36rpx;
    margin-left: 30rpx;
    width: 36rpx;
}

.navs {
    flex-flow: wrap;
}

.navs .nav {
    align-items: center;
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    width: 20%;
    z-index: 999;
}

.navs .nav .icon {
    height: 110rpx;
    width: 110rpx;
}

page {
    background-color: #fff;
}

.tops {
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    margin-top: 10rpx;
    padding: 30rpx;
    width: 100%;
}

.contents,.tops {
    justify-content: space-between;
}

.contents {
    align-items: center;
    margin-bottom: 40rpx;
    width: 48%;
}

.contents image {
    border-radius: 10rpx;
    height: 200rpx;
    width: 100%;
}

.title {
    font-size: 30rpx;
    margin-top: 20rpx;
    width: 100%;
}

.nodatas {
    color: #000;
    font-size: 30rpx;
    margin-top: 200rpx;
    text-align: center;
}

.bgmain {
    background-color: #ff6344;
}

.bgmain,.cuIcon-back {
    color: #fff;
}

.cuIcon-right {
    font-size: 36rpx;
}

.slide_box {
    background-color: #fff;
    position: relative;
}

.indicator-dots {
    bottom: 30rpx;
    display: flex;
    justify-content: center;
    left: 0;
    position: absolute;
    width: 100%;
}

.indicator-dots view {
    background: #d1d1d1;
    border-radius: 50%;
    height: 12rpx;
    margin: 0 5rpx;
    width: 12rpx;
}

.indicator-dots view.dots_on {
    background: #fff;
}

.cate_box {
    display: flex;
    margin: 30rpx 30rpx 20rpx;
    overflow-x: scroll;
    white-space: nowrap;
}

.cate_box .cate_item {
    background: #f9f9f9;
    border-radius: 5rpx;
    color: #000;
    font-size: 26rpx;
    margin: 0 35rpx 0 0;
    padding: 15rpx 30rpx;
}

.cate_active {
    background: #fff0ed!important;
    color: #fe4f2d!important;
}

.goods_item {
    border-bottom: 1rpx solid #f2f2f2;
    position: relative;
}

.goods_img {
    border-radius: 20rpx;
    flex-shrink: 0;
    height: 170rpx;
    width: 200rpx;
}

.name {
    max-width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.right_content {
    flex-direction: column;
    margin: 15rpx 20rpx;
}

.right_content view {
    line-height: 50rpx;
}

.badge {
    background: red;
    border-radius: 20rpx;
    color: #fff;
    height: 55rpx;
    line-height: 55rpx;
    position: absolute;
    text-align: center;
    width: 70rpx;
}