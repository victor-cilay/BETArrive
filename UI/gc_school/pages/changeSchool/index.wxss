.address {
    height: 32rpx;
    width: 32rpx;
}

.city {
    align-items: flex-end;
    -webkit-align-items: center;
    align-items: center;
    color: #333;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    margin-right: auto;
}

.city .font {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    display: -webkit-box;
    overflow: hidden;
}

.city .cuIcon-triangledownfill {
    font-size: 40rpx;
}

page {
    background-color: #fff!important;
}

.search {
    background: #f9f8f8;
    border-radius: 16px;
    height: 64rpx;
    width: 504rpx;
}

.search .icon {
    height: 32rpx;
    width: 32rpx;
}

.schools {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.schools .kong {
    width: 214rpx;
}

.schools .school {
    align-items: center;
    background: #f9f8f8;
    border-radius: 16rpx;
    box-sizing: border-box;
    color: #333;
    display: flex;
    flex-direction: column;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    height: 264rpx;
    justify-content: center;
    width: 214rpx;
}

.schools .school .logo {
    border-radius: 1000rpx;
    height: 100rpx;
    width: 100rpx;
}

.schools .school.cur {
    background: #fff4f4;
    border: 2rpx solid #ff4c4d;
    border-radius: 16rpx;
}

.schools .school .name {
    text-align: center;
}

.enter {
    background: linear-gradient(270deg,#ff716c,#ff484a);
    border-radius: 40px;
    color: #fff;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 500;
    height: 88rpx;
    margin: auto;
    width: 656rpx;
}

.enter,.notData {
    align-items: center;
    display: flex;
    justify-content: center;
}