.hidden {
    display: none!important;
}

.popup-layer {
    background-color: #f3f3f3;
    border-top: 1rpx solid #ddd;
    height: 42vw;
    padding: 20rpx 2%;
    position: fixed;
    top: 100%;
    transition: all .15s linear;
    width: 100%;
    z-index: 20;
}

.popup-layer.showLayer {
    transform: translate3d(0,-42vw,0);
}

.popup-layer .emoji-swiper {
    height: 40vw;
}

.popup-layer .emoji-swiper swiper-item {
    align-content: flex-start;
    display: flex;
    flex-wrap: wrap;
}

.popup-layer .emoji-swiper swiper-item view {
    align-items: center;
    display: flex;
    height: 12vw;
    justify-content: center;
    width: 12vw;
}

.popup-layer .emoji-swiper swiper-item view image {
    height: 8.4vw;
    width: 8.4vw;
}

.popup-layer .more-layer {
    height: 42vw;
    width: 100%;
}

.popup-layer .more-layer .list {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.popup-layer .more-layer .list .box {
    align-items: center;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    height: 18vw;
    justify-content: center;
    margin: 0 3vw 2vw;
    width: 18vw;
}

.popup-layer .more-layer .list .box .icon {
    font-size: 70rpx;
}

.input-box {
    background-color: #f2f2f2;
    border-bottom: 1rpx solid #ddd;
    bottom: 0rpx;
    display: flex;
    padding: 0 1% env(safe-area-inset-bottom);
    position: fixed;
    transition: all .15s linear;
    width: 100%;
    z-index: 20;
}

.input-box.showLayer {
    transform: translate3d(0,-42vw,0);
}

.input-box .more,.input-box .voice {
    justify-content: center;
    width: 90rpx;
}

.input-box .more,.input-box .send,.input-box .voice {
    align-items: center;
    display: flex;
    flex-shrink: 0;
    height: 100rpx;
}

.input-box .send {
    width: 100rpx;
}

.input-box .send .btn {
    align-items: center;
    background: linear-gradient(90deg,#f09b37,#eb632c);
    border-radius: 6rpx;
    color: #fff;
    display: flex;
    font-size: 24rpx;
    height: 56rpx;
    justify-content: center;
    width: 90rpx;
}

.input-box .textbox {
    margin-top: 15rpx;
    min-height: 70rpx;
    width: 100%;
}

.input-box .textbox .voice-mode {
    align-items: center;
    background-color: #fff;
    border: 1rpx solid #cdcdcd;
    border-radius: 70rpx;
    color: #555;
    display: flex;
    font-size: 28rpx;
    height: 68rpx;
    justify-content: center;
    width: calc(100% - 2rpx);
}

.input-box .textbox .voice-mode.recording {
    background-color: #e5e5e5;
}

.input-box .textbox .text-mode {
    background-color: #fff;
    border-radius: 40rpx;
    display: flex;
    min-height: 70rpx;
    width: 100%;
}

.input-box .textbox .text-mode .box {
    align-items: center;
    display: flex;
    min-height: 70rpx;
    padding-left: 30rpx;
    width: 100%;
}

.input-box .textbox .text-mode .box textarea {
    width: 100%;
}

.input-box .textbox .text-mode .em {
    align-items: center;
    display: flex;
    flex-shrink: 0;
    height: 70rpx;
    justify-content: center;
    padding-left: 10rpx;
    width: 80rpx;
}

.record {
    background-color: rgba(0,0,0,.6);
    border-radius: 20rpx;
    height: 40vw;
    left: 30%;
    position: fixed;
    top: 55%;
    width: 40vw;
}

.record .ing {
    align-items: center;
    display: flex;
    height: 30vw;
    justify-content: center;
    width: 100%;
}

@-webkit-keyframes volatility {
    0% {
        background-position: 0 130%;
    }

    20% {
        background-position: 0 150%;
    }

    30% {
        background-position: 0 155%;
    }

    40% {
        background-position: 0 150%;
    }

    50% {
        background-position: 0 145%;
    }

    70% {
        background-position: 0 150%;
    }

    80% {
        background-position: 0 155%;
    }

    90% {
        background-position: 0 140%;
    }

    100% {
        background-position: 0 135%;
    }
}

@keyframes volatility {
    0% {
        background-position: 0 130%;
    }

    20% {
        background-position: 0 150%;
    }

    30% {
        background-position: 0 155%;
    }

    40% {
        background-position: 0 150%;
    }

    50% {
        background-position: 0 145%;
    }

    70% {
        background-position: 0 150%;
    }

    80% {
        background-position: 0 155%;
    }

    90% {
        background-position: 0 140%;
    }

    100% {
        background-position: 0 135%;
    }
}

.record .ing .icon {
    -webkit-text-fill-color: transparent;
    animation: volatility 1.5s ease-in-out -1.5s infinite alternate;
    -webkit-background-clip: text;
    background-image: linear-gradient(180deg,#f09b37,#fff 50%);
    background-size: 100% 200%;
    color: #f09b37;
    font-size: 150rpx;
}

.record .cancel {
    align-items: center;
    display: flex;
    height: 30vw;
    justify-content: center;
    width: 100%;
}

.record .cancel .icon {
    color: #fff;
    font-size: 150rpx;
}

.record .tis {
    color: #fff;
    display: flex;
    font-size: 28rpx;
    height: 10vw;
    justify-content: center;
    width: 100%;
}

.record .tis.change {
    color: #f09b37;
}

.content {
    width: 100%;
}

.content .msg-list {
    bottom: calc(100rpx + env(safe-area-inset-bottom));
    padding: 0 30rpx;
    position: absolute;
    top: 40rpx;
    width: 100%;
}

.content .msg-list .loading {
    display: flex;
    justify-content: center;
}

@-webkit-keyframes stretchdelay {
    0%,100%,40% {
        transform: scaleY(.6);
    }

    20% {
        transform: scaleY(1);
    }
}

@keyframes stretchdelay {
    0%,100%,40% {
        transform: scaleY(.6);
    }

    20% {
        transform: scaleY(1);
    }
}

.content .msg-list .loading .spinner {
    align-items: center;
    display: flex;
    height: 100rpx;
    justify-content: space-between;
    margin: 20rpx 0;
    width: 60rpx;
}

.content .msg-list .loading .spinner view {
    animation: stretchdelay 1.2s ease-in-out infinite;
    background-color: #f06c7a;
    border-radius: 6rpx;
    height: 50rpx;
    width: 6rpx;
}

.content .msg-list .loading .spinner .rect2 {
    animation-delay: -1.1s;
}

.content .msg-list .loading .spinner .rect3 {
    animation-delay: -1s;
}

.content .msg-list .loading .spinner .rect4 {
    animation-delay: -.9s;
}

.content .msg-list .loading .spinner .rect5 {
    animation-delay: -.8s;
}

.content .msg-list .row {
    padding: 20rpx 0;
}

.content .msg-list .row .system,.content .msg-list .row .system view {
    display: flex;
    justify-content: center;
}

.content .msg-list .row .system view {
    align-items: center;
    background-color: #c9c9c9;
    border-radius: 40rpx;
    color: #fff;
    font-size: 24rpx;
    height: 50rpx;
    padding: 0 30rpx;
}

.content .msg-list .row .system .red-envelope image {
    height: 30rpx;
    margin-right: 5rpx;
    width: 30rpx;
}

.content .msg-list .row:first-child {
    margin-top: 20rpx;
}

.content .msg-list .row .my .left,.content .msg-list .row .other .right {
    display: flex;
    width: 100%;
}

.content .msg-list .row .my .left .bubble,.content .msg-list .row .other .right .bubble {
    align-items: center;
    border-radius: 10rpx;
    display: flex;
    font-size: 32rpx;
    max-width: 70%;
    min-height: 50rpx;
    padding: 15rpx 20rpx;
    word-break: break-word;
}

.content .msg-list .row .my .left .bubble.img,.content .msg-list .row .other .right .bubble.img {
    background-color: initial;
    overflow: hidden;
    padding: 0;
}

.content .msg-list .row .my .left .bubble.img image,.content .msg-list .row .other .right .bubble.img image {
    max-height: 350rpx;
    max-width: 350rpx;
}

.content .msg-list .row .my .left .bubble.red-envelope,.content .msg-list .row .other .right .bubble.red-envelope {
    align-items: flex-start;
    background-color: initial;
    justify-content: center;
    overflow: hidden;
    padding: 0;
    position: relative;
}

.content .msg-list .row .my .left .bubble.red-envelope image,.content .msg-list .row .other .right .bubble.red-envelope image {
    height: 313rpx;
    width: 250rpx;
}

.content .msg-list .row .my .left .bubble.red-envelope .tis,.content .msg-list .row .other .right .bubble.red-envelope .tis {
    color: #9c1712;
    font-size: 26rpx;
    position: absolute;
    top: 6%;
}

.content .msg-list .row .my .left .bubble.red-envelope .blessing,.content .msg-list .row .other .right .bubble.red-envelope .blessing {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    bottom: 14%;
    color: #e9b874;
    display: -webkit-box;
    overflow: hidden;
    position: absolute;
    text-align: center;
    width: 80%;
}

.content .msg-list .row .my .left .bubble.voice .icon,.content .msg-list .row .other .right .bubble.voice .icon {
    align-items: center;
    display: flex;
    font-size: 40rpx;
}

.content .msg-list .row .my .left .bubble.voice .icon:after,.content .msg-list .row .other .right .bubble.voice .icon:after {
    border-radius: 100%;
    box-sizing: border-box;
    content: " ";
    height: 53rpx;
    position: absolute;
    width: 53rpx;
}

.content .msg-list .row .my .left .bubble.voice .length,.content .msg-list .row .other .right .bubble.voice .length {
    font-size: 28rpx;
}

.content .msg-list .row .my .right,.content .msg-list .row .other .left {
    flex-shrink: 0;
    height: 80rpx;
    width: 80rpx;
}

.content .msg-list .row .my .right image,.content .msg-list .row .other .left image {
    border-radius: 10rpx;
    height: 80rpx;
    width: 80rpx;
}

.content .msg-list .row .my {
    display: flex;
    justify-content: flex-end;
    width: 100%;
}

.content .msg-list .row .my .left {
    align-items: center;
    justify-content: flex-end;
    min-height: 80rpx;
}

.content .msg-list .row .my .left .bubble {
    background-color: #f06c7a;
    color: #fff;
}

.content .msg-list .row .my .left .bubble.voice .icon {
    color: #fff;
}

.content .msg-list .row .my .left .bubble.voice .length {
    margin-right: 20rpx;
}

@-webkit-keyframes my-play {
    0% {
        transform: translateX(80%);
    }

    100% {
        transform: translateX(0);
    }
}

@keyframes my-play {
    0% {
        transform: translateX(80%);
    }

    100% {
        transform: translateX(0);
    }
}

.content .msg-list .row .my .left .bubble.play .icon:after {
    animation: my-play 1s linear infinite;
    border-left: 10rpx solid rgba(240,108,122,.5);
}

.content .msg-list .row .my .right {
    margin-left: 15rpx;
}

.content .msg-list .row .other {
    display: flex;
    width: 100%;
}

.content .msg-list .row .other .left {
    margin-right: 15rpx;
}

.content .msg-list .row .other .right {
    flex-wrap: wrap;
}

.content .msg-list .row .other .right .username {
    color: #999;
    display: flex;
    font-size: 24rpx;
    height: 45rpx;
    width: 100%;
}

.content .msg-list .row .other .right .username .name {
    margin-right: 50rpx;
}

.content .msg-list .row .other .right .bubble {
    background-color: #fff;
    color: #333;
}

.content .msg-list .row .other .right .bubble.voice .icon {
    color: #333;
}

.content .msg-list .row .other .right .bubble.voice .length {
    margin-left: 20rpx;
}

@-webkit-keyframes other-play {
    0% {
        transform: translateX(-80%);
    }

    100% {
        transform: translateX(0);
    }
}

@keyframes other-play {
    0% {
        transform: translateX(-80%);
    }

    100% {
        transform: translateX(0);
    }
}

.content .msg-list .row .other .right .bubble.play .icon:after {
    animation: other-play 1s linear infinite;
    border-right: 10rpx solid hsla(0,0%,100%,.8);
}

.windows .mask {
    background-color: rgba(0,0,0,.6);
    height: 100%;
    opacity: 0;
    position: fixed;
    top: 100%;
    transition: opacity .2s ease-out;
    width: 100%;
    z-index: 1000;
}

.windows .layer {
    border-radius: 20rpx;
    height: 70%;
    left: 10%;
    overflow: hidden;
    position: fixed;
    top: 100%;
    transform: scale3d(.5,.5,1);
    transition: all .2s ease-out;
    width: 80%;
    z-index: 1001;
}

.windows.show {
    display: block;
}

.windows.show .mask {
    opacity: 1;
    top: 0;
}

.windows.show .layer {
    transform: translate3d(0,-85vh,0) scaleX(1);
}

.windows.hide {
    display: block;
}

.windows.hide .mask {
    opacity: 0;
    top: 0;
}

.open-redenvelope {
    background-color: #cf3c35;
    height: 70vh;
    position: relative;
    width: 100%;
}

.open-redenvelope .top {
    background-color: #fe5454;
    border-radius: 0 0 100% 100%;
    box-shadow: inset 0 -20rpx 0 #9c1712;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 65rpx;
    width: 100%;
}

.open-redenvelope .top .close-btn {
    display: flex;
    height: 80rpx;
    justify-content: flex-end;
    margin-bottom: 30rpx;
    width: 100%;
}

.open-redenvelope .top .close-btn .icon {
    color: #9c1712;
    margin-right: 10rpx;
    margin-top: 10rpx;
}

.open-redenvelope .top image {
    border: 12rpx solid #cf3c35;
    border-radius: 100%;
    height: 130rpx;
    margin-bottom: -65rpx;
    width: 130rpx;
}

.open-redenvelope .blessing,.open-redenvelope .from,.open-redenvelope .money,.open-redenvelope .showDetails {
    color: #fff;
    display: flex;
    font-size: 32rpx;
    justify-content: center;
    padding: 5rpx 5%;
    width: 90%;
}

.open-redenvelope .money {
    color: #f8d757;
    display: flex;
    font-size: 100rpx;
    padding-top: 20rpx;
}

.open-redenvelope .showDetails {
    align-items: center;
    bottom: 20rpx;
    color: #f8d757;
    font-size: 28rpx;
    position: absolute;
}

.open-redenvelope .showDetails .icon {
    color: #f8d757;
    font-size: 26rpx;
}

.input-box {
    position: fixed!important;
}

.username {
    align-items: center;
    display: flex;
}