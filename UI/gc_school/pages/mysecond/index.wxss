.bgmain,.cu-bar .action:first-child {
    background-color: #ff6444;
    color: #fff;
}

.tab_contain {
    border-bottom: 1rpx solid #eee;
    height: 90rpx;
    width: 100%;
}

.tab_contain,.tab_one {
    align-items: center;
    box-sizing: border-box;
    display: flex;
}

.tab_one {
    height: 100%;
    justify-content: center;
    margin-bottom: 10rpx;
    width: 25%;
}

.tab_one view {
    align-items: center;
    display: flex;
    font-size: 30rpx;
    height: 100%;
    letter-spacing: 2rpx;
}

.tab_on {
    border-bottom: 4rpx solid #7acfa6;
    font-size: 32rpx;
    font-weight: 600;
}

.trade_box {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    height: 100%;
    justify-content: center;
}

.single-trade {
    background-color: #fff;
    border-radius: 6rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,.1);
    height: 100%;
    margin: 10rpx;
    padding-bottom: 20rpx;
    position: relative;
    width: 90%;
}

.trade {
    border-bottom: 1px solid hsla(0,0%,50%,.068);
    justify-content: center;
    margin-left: 20rpx;
    margin-top: 20rpx;
    width: 100%;
}

.first,.trade {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 21px;
}

.first {
    width: 80%;
}

.first view {
    font-size: 12px;
    padding-left: 12rpx;
}

.status {
    float: right;
    font-size: 12px;
}

.trade2 {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 100%;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
}

.text-coursename {
    font-size: 27rpx;
    line-height: 40rpx;
    padding-top: 10rpx;
}

.text-bookname,.text-coursename {
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.text-bookname {
    font-size: 32rpx;
    font-weight: 700;
    line-height: 45rpx;
}

.second-left {
    display: flex;
    flex-direction: row;
    width: 100%;
}

.bookimage {
    height: 100rpx;
    width: 100rpx;
}

.textdet {
    display: flex;
    flex-direction: column;
    width: calc(80% - 100rpx);
}

.textdet view {
    padding-left: 10rpx;
}

.second-right {
    align-items: center;
    display: flex;
    justify-content: flex-end;
    width: 20%;
}

.second-right image {
    height: 35rpx;
    width: 35rpx;
}

.second-right view {
    font-size: 30rpx;
}

.trade3 {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 100%;
    justify-content: space-between;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.third-left {
    color: #a9a9a9;
    float: left;
    font-size: 27rpx;
    padding-left: 20rpx;
}

.third-right {
    align-items: center;
    float: right;
    justify-content: flex-end;
}

.third-right,.trade4 {
    display: flex;
}

.trade4 {
    flex-direction: row;
    justify-content: center;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
}

.price {
    padding-left: 10rpx;
}

.blank {
    color: grey;
    height: 2px;
    width: 100%;
}

.nocontent {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
}

.nocontent image {
    height: 150rpx;
    width: 150rpx;
}

.blank_text {
    color: #c6c6c8;
    font-size: 32rpx;
    letter-spacing: 2rpx;
    padding-top: 10rpx;
}

.sm {
    font-size: 26rpx!important;
    margin-left: 15rpx;
}