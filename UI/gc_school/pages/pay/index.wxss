page {
    background: #f3f3f3;
}

.container {
    margin-bottom: 80rpx;
}

.top {
    background: #fcf4d0;
    color: #94711c;
    font-size: 26rpx;
    padding: 20rpx 30rpx;
}

.arrow {
    height: 25rpx;
    width: 25rpx;
}

.list .item {
    background: #fff;
    padding: 20rpx;
}

.list .item .title {
    color: #333;
    flex-shrink: 0;
    font-size: 24rpx;
}

.list .item .input {
    position: relative;
    width: 100%;
}

.list .item .arrow_r {
    height: 25rpx;
    margin-left: 10rpx;
    width: 15rpx;
}

.hqyzm {
    border: 2rpx solid #64edac;
    border-radius: 30rpx;
    color: #64edac;
    flex-shrink: 0;
    margin-left: 10rpx;
    padding: 0rpx 20rpx;
}

.list .item textarea {
    min-height: 150rpx;
}

.list .item .item_img {
    border: 2rpx solid #f5f5f5;
    height: 120rpx;
    margin-bottom: 10rpx;
    margin-right: 40rpx;
    position: relative;
    width: 120rpx;
}

.list .item .del {
    height: 30rpx;
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%,-50%);
    width: 30rpx;
}

.list .item .name_num {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.list .item textarea {
    width: 100%;
}

.submit[size="mini"] {
    background: #64edac;
    border-radius: 10rpx;
    color: #fff;
    font-size: 28rpx;
    left: 50%;
    margin: 50rpx 0;
    padding: 10rpx 50rpx;
    transform: translateX(-50%);
    width: 95%;
}

.content {
    background: #fff;
}

.content .part {
    padding: 20rpx;
}

.charge_item {
    color: #666;
    font-size: 28rpx;
    margin-right: 150rpx;
}

.charge_item:nth-child(2) {
    margin-right: 0rpx;
}

.charge_item radio {
    transform: scale(.8);
}

.diff_item {
    background: #f3f3f3;
    border-radius: 50%;
    display: inline-block;
    height: 30rpx;
    margin-right: 10rpx;
    width: 30rpx;
}

.diff_item.sel,.sure_btn {
    background: #64edac;
}

.sure_btn {
    border-radius: 20rpx;
    bottom: 50rpx;
    color: #fff;
    font-size: 28rpx;
    left: 50%;
    padding: 20rpx 0;
    position: fixed;
    text-align: center;
    transform: translateX(-50%);
    width: 95%;
}