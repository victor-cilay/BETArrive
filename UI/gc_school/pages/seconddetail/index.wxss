.bgmain,.cu-bar .action:first-child {
    background-color: #ff6444;
    color: #fff;
}

.picture {
    height: 300px;
    width: 100%;
}

.container {
    height: 100%;
}

.bottom {
    align-items: center;
    background: #fff;
    border-top: 1rpx solid #eee;
    bottom: 0rpx;
    box-sizing: border-box;
    display: flex;
    left: 0rpx;
    opacity: 1;
    padding: 10rpx;
    position: fixed;
    width: 100%;
    z-index: 8;
}

.clear {
    clear: both;
    overflow: hidden;
}

.slide-image {
    height: 100%;
    width: 100%;
}

.flex {
    display: flex;
    width: 100%;
}

.flex>.sub {
    flex: 1;
    overflow: hidden;
}

.second {
    background: #fff;
    font-size: 15px;
    padding: 10px 15px;
}

.pj_box {
    background: #fff;
    font-size: 13px;
    margin-top: 10px;
    padding: 0 15px;
}

.detail {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    height: 148rpx;
    justify-content: space-between;
    padding: 24rpx;
    width: 100%;
}

.detail image {
    border-radius: 50%;
    height: 100rpx;
    width: 100rpx;
}

.des_box {
    align-items: flex-start;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-around;
    padding: 10rpx 0;
    width: 450rpx;
}

.user_name {
    font-size: 32rpx;
    letter-spacing: 2rpx;
    text-indent: 1.45em;
}

.local_box {
    align-items: center;
}

.detail_card,.local_box {
    display: flex;
}

.detail_card {
    box-sizing: border-box;
    justify-content: space-between;
    padding: 30rpx 0;
    width: 100%;
}

.detail_border {
    border-bottom: 1rpx solid #eee;
}

.detail_title {
    font-size: 28rpx;
    letter-spacing: 2rpx;
    line-height: 45rpx;
    width: 20%;
}

.detail_content,.detail_content_d {
    color: #616161;
    font-size: 27rpx;
    letter-spacing: 2rpx;
    line-height: 44rpx;
    width: 78%;
    word-break: break-all;
}

.detail_content_d {
    padding-bottom: 40px;
}

.sex {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: center;
    width: 100rpx;
}

.sex image {
    border-radius: 50%;
    height: 80rpx;
    width: 80rpx;
}

.local_box image {
    height: 20px;
    width: 20px;
}

.first {
    background: #fff;
    border-bottom: 1px solid #f6f6f6;
    padding: 0 15px;
}

.price {
    color: #f66;
    float: left;
    font-size: 17px;
    height: 15px;
    line-height: 30px;
    margin: 5px;
}

.shoucang {
    color: #999;
    float: right;
    font-size: 12px;
    line-height: 30px;
    overflow: hidden;
    text-align: center;
    width: 50px;
}

.price ._em {
    font-size: 12px;
    margin-left: 20px;
}

.flex {
    margin: 0 -15px;
    padding: 3px 15px 0;
    position: relative;
    width: auto;
}

.subc {
    width: 80%;
}

.subc,.subg {
    font-size: 13px;
}

.subg {
    width: 20%;
}

.add-cart {
    box-sizing: border-box;
    height: 100%;
    padding-left: 30px;
}

.add-cart,.add-cart-btn {
    align-items: center;
    display: flex;
    justify-content: center;
    width: 90%;
}

.add-cart-btn {
    background: #ff6444;
    border-radius: 35rpx;
    color: #fff;
    font-size: 32rpx;
    height: 80rpx;
    letter-spacing: 4rpx;
}

.t_card {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    height: 100rpx;
    justify-content: center;
    position: relative;
    width: 20%;
}

.t_card image {
    height: 80rpx;
    padding-top: 10rpx;
    width: 60rpx;
}

.t_card text {
    align-items: flex-start;
    color: #696969;
    display: flex;
    font-size: 24rpx;
    height: calc(100% - 45rpx);
    justify-content: center;
    padding-top: 5rpx;
    text-align: center;
    white-space: nowrap;
    width: 100%;
}

.t_button {
    height: 100%;
    left: 0rpx;
    opacity: .01;
    position: absolute;
    top: 0rpx;
    width: 100%;
    z-index: 9;
}