page {
    background-color: #f2f2f2;
}

.bgmain {
    background-color: #fff;
    color: #000;
}

.picture {
    height: 300px;
    width: 100%;
}

.container {
    height: 100%;
}

.bottom {
    align-items: center;
    background: #fff;
    border-top: 1rpx solid #eee;
    bottom: 0rpx;
    box-sizing: border-box;
    box-sizing: initial;
    height: 100rpx;
    justify-content: space-between;
    left: 0rpx;
    opacity: 1;
    padding-bottom: env(safe-area-inset-bottom);
    position: fixed;
    width: 100%;
    z-index: 8;
}

.bottom,.bottom_left {
    display: flex;
}

.bottom_left {
    width: 50%;
}

.clear {
    clear: both;
    overflow: hidden;
}

.slide-image {
    height: 100%;
    width: 100%;
}

.fav_active {
    color: #ff6444!important;
}

.flex {
    display: flex;
    width: 100%;
}

.flex>.sub {
    flex: 1;
    overflow: hidden;
}

.pj_box {
    background: #fff;
    margin-top: 10px;
    padding: 20rpx 30rpx 0;
}

.detail_card {
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    padding: 10rpx 0;
    width: 100%;
}

.detail_title {
    color: #919191;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    line-height: 45rpx;
    width: 20%;
}

.detail_content {
    font-size: 28rpx;
}

.detail_content,.detail_content_d {
    color: #616161;
    letter-spacing: 2rpx;
    line-height: 44rpx;
    width: 78%;
    word-break: break-all;
}

.detail_content_d {
    font-size: 27rpx;
}

.first {
    align-items: center;
    background: #fff;
    display: flex;
    justify-content: space-between;
    padding: 13rpx 20rpx;
}

.left {
    height: 80rpx;
    width: 55%;
}

.price {
    color: #121212;
    font-size: 36rpx;
    font-weight: 700;
    line-height: 60rpx;
}

.oldprice,.price {
    float: left;
    font-family: PingFang SC;
}

.oldprice {
    color: #999;
    font-size: 26rpx;
    font-weight: 500;
    margin-left: 29rpx;
    margin-top: 10rpx;
    text-decoration: line-through;
}

.right {
    align-items: center;
    display: flex;
}

.share {
    background-color: #fff;
    padding: 0;
    width: 100rpx;
}

button::after {
    border: none;
}

.right image {
    border-radius: 50%;
    box-shadow: 0 1px 6px rgba(0,0,0,.07);
    height: 75rpx;
    margin-right: 10rpx;
    padding: 20rpx;
    width: 80rpx;
}

.name {
    font-size: 30rpx;
    font-weight: 700;
    line-height: 70rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.price ._em {
    color: #121212;
    font-family: PingFang SC;
    font-size: 62rpx;
    font-weight: 700;
    line-height: 60rpx;
    margin-left: 20px;
}

.add-cart {
    height: 100%;
    width: 55%;
}

.add-cart,.add-cart-btn {
    display: flex;
}

.add-cart-btn {
    align-items: center;
    background: #222;
    color: #fff;
    font-size: 30rpx;
    height: 84rpx;
    justify-content: center;
    letter-spacing: 4rpx;
    margin-top: 8rpx;
    width: 100%;
}

.cuIcon {
    font-size: 46rpx!important;
}

.t_card {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    height: 100rpx;
    justify-content: center;
    margin-left: 30rpx;
    position: relative;
    width: 20%;
}

.t_card image {
    height: 80rpx;
    width: 60rpx;
}

.t_card text {
    align-items: flex-start;
    color: #696969;
    display: flex;
    font-size: 24rpx;
    height: calc(100% - 45rpx);
    justify-content: center;
    padding-top: 5rpx;
    text-align: center;
    white-space: nowrap;
    width: 100%;
}

.comment_box {
    background: #fff;
    margin-top: 10px;
    padding-bottom: 250rpx;
}

.comment_box .name {
    padding: 20rpx 30rpx 0;
}

.comment_item_first {
    border-top: 1px solid hsla(0,0%,79%,.6);
    padding: 20rpx 30rpx;
}

.comment_item_first image {
    border-radius: 50%;
    height: 50rpx;
    margin-right: 20rpx;
    width: 50rpx;
}

.content {
    color: #666;
    font-family: PingFang SC;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 42rpx;
}

.content,.time {
    margin-left: 70rpx;
}

.time {
    color: #b7b7b7;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.comment_item_child {
    border-top: 1px solid hsla(0,0%,79%,.6);
    margin-left: 80rpx;
    padding: 20rpx 30rpx 20rpx 0;
}

.comment_item_child image {
    border-radius: 50%;
    height: 50rpx;
    margin-right: 20rpx;
    width: 50rpx;
}

.top {
    align-items: center;
    display: flex;
}

.nickname {
    flex-grow: 1;
    font-size: 24rpx;
}

.cuIcon-appreciate {
    font-size: 34rpx;
}

.comment_input {
    background-color: #fff;
    border-top: 1rpx solid #eee;
    bottom: 0rpx;
    display: flex;
    height: 120rpx;
    left: 0rpx;
    padding: 20rpx;
    position: fixed;
    width: 100%;
    z-index: 99;
}

.comment_input input {
    background-color: #f2f2f2;
    border-radius: 10rpx;
    font-size: 30rpx;
    height: 80rpx;
    padding-left: 10rpx;
    width: 85%;
}

.comment_input .submit {
    background-color: #f66;
    border-radius: 10rpx;
    color: #fff;
    flex-shrink: 0;
    margin-left: 20rpx;
    padding: 20rpx;
}

.nocontent {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 20rpx;
    width: 100%;
}

.nocontent image {
    height: 150rpx;
    width: 150rpx;
}

.blank_text {
    color: #c6c6c8;
    font-size: 32rpx;
    letter-spacing: 2rpx;
    padding-top: 10rpx;
}

.more {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    text-align: center;
}

.contact {
    border-bottom-left-radius: 40rpx;
    border-top-left-radius: 40rpx;
}

.buy {
    border-bottom-right-radius: 40rpx;
    border-top-right-radius: 40rpx;
}

.avatar {
    border-radius: 50%;
    height: 80rpx;
    width: 80rpx;
}

.nickname {
    color: #141414;
    display: contents;
    font-size: 32rpx;
    font-weight: 700;
    line-height: 36rpx;
}

.create_time,.nickname {
    font-family: PingFang SC;
}

.create_time {
    color: #888;
    font-size: 28rpx;
    font-weight: 500;
}

.xin {
    color: #121212;
    font-family: DIN;
    font-size: 28rpx;
    font-weight: 700;
    line-height: 60rpx;
}

.details {
    color: #232323;
    font-size: 34rpx;
    font-weight: 500;
}

.details,.minute {
    font-family: PingFang SC;
}

.minute {
    color: #999;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 70rpx;
    margin-left: 10rpx;
}

.di-image {
    height: 41rpx;
    width: 41rpx;
}