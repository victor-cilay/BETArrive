.bgmain,page {
    background-color: #f1f1f1!important;
}

.bgmain {
    color: #121212;
}

.img {
    flex-shrink: 0;
    height: 180rpx;
    margin-right: 20rpx;
    width: 180rpx;
}

.detail_box,.img {
    border-radius: 20rpx;
}

.detail_box {
    background: #fff;
    padding: 28rpx;
}

.zhuangtai {
    padding: 0 30rpx;
}

.paysstate {
    color: #232323;
    font-size: 38rpx;
    font-weight: 800;
}

.paysstate,.paytime {
    font-family: PingFang SC;
    line-height: 70rpx;
}

.paytime {
    color: #666;
    font-size: 26rpx;
    font-weight: 400;
}

.bg-tab {
    padding: 28rpx;
}

.pay-pay {
    color: #f42e2f;
    font-size: 36rpx;
    vertical-align: bottom;
}

.pay-pay,.pay-title {
    font-family: PingFang SC;
    font-weight: 700;
}

.pay-title {
    color: #141414;
    font-size: 30rpx;
    line-height: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 289rpx;
}

.pay-price {
    color: #999;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-weight: 500;
    text-decoration: line-through;
}

.number-title {
    color: #232323;
    font-size: 32rpx;
    text-align: left;
    width: 40%;
}

.number-number,.number-title {
    font-family: PingFang SC;
    font-weight: 500;
    line-height: 90rpx;
}

.number-number {
    color: #333;
    font-size: 28rpx;
    text-align: right;
    width: 60%;
}

.detail-center {
    background: #fff;
    border-radius: 20rpx;
    padding: 28rpx;
}

.bottom {
    align-items: center;
    background: #fff;
    border-top: 1rpx solid #eee;
    bottom: 0rpx;
    box-sizing: border-box;
    height: 100rpx;
    justify-content: space-between;
    left: 0rpx;
    opacity: 1;
    position: fixed;
    width: 100%;
    z-index: 8;
}

.bottom,.bottom_left {
    display: flex;
}

.bottom_left {
    width: 50%;
}

.t_card {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    height: 100rpx;
    justify-content: center;
    margin-left: 30rpx;
    position: relative;
    width: 20%;
}

.t_card image {
    height: 80rpx;
    width: 60rpx;
}

.t_card text {
    align-items: flex-start;
    color: #696969;
    display: flex;
    font-size: 24rpx;
    height: calc(100% - 45rpx);
    justify-content: center;
    padding-top: 5rpx;
    text-align: center;
    white-space: nowrap;
    width: 100%;
}

.contact {
    border-bottom-left-radius: 40rpx;
    border-top-left-radius: 40rpx;
}

.buy {
    border-bottom-right-radius: 40rpx;
    border-top-right-radius: 40rpx;
}

.add-cart {
    height: 100%;
    width: 55%;
}

.add-cart,.add-cart-btn {
    display: flex;
}

.add-cart-btn {
    align-items: center;
    background: #222;
    color: #fff;
    font-size: 30rpx;
    height: 84rpx;
    justify-content: center;
    letter-spacing: 4rpx;
    margin-top: 8rpx;
    width: 100%;
}

.flex>.sub {
    flex: 1;
    overflow: hidden;
}

.kefu {
    align-items: center;
    display: flex;
    justify-content: center;
    margin-left: 30rpx;
}

.kefu-text {
    color: #232323;
    font-size: 28rpx;
    line-height: 70rpx;
    margin-left: 15rpx;
}

.kefu-text,.tuikuan {
    font-family: PingFang SC;
    font-weight: 500;
}

.tuikuan {
    align-items: center;
    background: #111;
    border-radius: 40rpx;
    box-shadow: 0rpx 2tpx 4tpx 0 rgba(0,0,0,.07);
    color: #fff;
    display: flex;
    font-size: 32rpx;
    height: 80rpx;
    justify-content: center;
    margin-right: 14rpx;
    width: 255rpx;
}

.kefu {
    position: relative;
}

.btn {
    left: 0rpx;
    opacity: 0;
    position: absolute;
}

.btn,.toast-box {
    height: 100%;
    top: 0;
    width: 100%;
}

.toast-box {
    left: 0;
    opacity: 1;
    position: fixed;
}

.toastbg {
    background-color: #000;
    min-height: 100vh;
    opacity: .2;
    position: absolute;
    width: 100%;
}

.showToast {
    margin-left: 15%;
    opacity: 1;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 70%;
}

.toast-title {
    background-color: #ff6444;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
    color: #fff;
    padding-left: 5%;
}

.toast-main,.toast-title {
    padding-bottom: 2vh;
    padding-top: 2vh;
}

.toast-main {
    background-color: #fff;
}

.toast-input {
    border: 1px solid #ddd;
    margin-left: 5%;
    margin-right: 5%;
    padding: 1vh 2vh;
}

.toast-button {
    display: flex;
    line-height: 80rpx;
    text-align: center;
}

.button1,.button2 {
    width: 50%;
}

.button1 view {
    border-radius: 0;
    border-bottom-left-radius: 16rpx;
    border-right: 1rpx solid #eee;
    color: red;
}

.button1 view,.button2 view {
    background-color: #fff;
    width: 100%;
}

.button2 view {
    border-radius: 0;
    border-bottom-right-radius: 16rpx;
    color: #000;
}