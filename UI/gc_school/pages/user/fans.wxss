.bgmain,page {
    background-color: #f7f5f6;
}

.bgmain {
    color: #000;
}

.border-radius20 {
    border-radius: 20rpx;
}

.list {
    margin: 30rpx 40rpx;
}

.list image {
    border-radius: 50%;
    height: 90rpx;
    margin-right: 20rpx;
    width: 90rpx;
}

.list .nickname {
    flex-grow: 1;
}

.list .follow_box {
    background: linear-gradient(90deg,#ff484a,#ff716c);
    border-radius: 40rpx;
    color: #fff;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    width: 120rpx;
}

.list .already_follow {
    background: #feeded!important;
    color: #ff4c4d;
}

.list .already_follow image {
    height: 36rpx;
    margin: 0 auto;
    width: 36rpx;
}